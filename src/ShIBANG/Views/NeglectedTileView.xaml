<UserControl x:Class="ShIBANG.Views.NeglectedTileView"
             x:ClassModifier="internal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:ShIBANG.Controls">
    <DockPanel VerticalAlignment="Top" Margin="7" LastChildFill="True">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal"  Margin="0,3,0,7" HorizontalAlignment="Center">
            <TextBlock Text="Neglected Games" FontSize="14" HorizontalAlignment="Center" FontFamily="Segoe UI Semibold" />
            <controls:FontImage Width="16" Height="16" Glyph="{DynamicResource MehOIcon}" Brush="DarkOrchid" Margin="4,0,0,0" />
        </StackPanel>
        
        <controls:SimpleGameList ItemsSource="{Binding NeglectedGames}" />
    </DockPanel>
</UserControl>
